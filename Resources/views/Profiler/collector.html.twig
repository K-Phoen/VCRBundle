{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}


{% block toolbar %}
    {# the web debug toolbar content #}
    {% set icon %}
        <img alt="VCR" src="data:image/png;base64,"/>
        <span class="sf-toolbar-status">{{ collector.requestsCount }}</span>
    {% endset %}
    {% set text %}
        <div class="sf-toolbar-info-piece">
            <b>Requests sent</b>
            <span>{{ collector.requestsCount }}</span>
        </div>
    {% endset %}

    {% include 'WebProfilerBundle:Profiler:toolbar_item.html.twig' with { 'link': profiler_url } %}
{% endblock %}

{% block menu %}
    {# the menu content #}
    <span class="label">
        <span class="icon"><img src="{{ asset('bundles/kphoenvcr/images/tape.png') }}" alt="" /></span>
        <strong>VCR</strong>
        <span class="count">
            <span>{{ collector.requestsCount }}</span>
        </span>
    </span>
{% endblock %}

{% block panel %}
    <h2>Sent Requests</h2>
    <table summary="Show sent requests">
        <thead>
            <tr>
                <th colspan="2">Request</th>
                <th>Response</th>
            </tr>
            <tr>
                <th>Method</th>
                <th>URL</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% if not collector.requestsCount %}
            <tr><td colspan="3">No request sent.</td></tr>
        {% else %}
            {% for log in collector.requestsLogs %}
            <tr>
                <td>{{ log.request.method|default('-') }}</td>
                <td>{{ log.request.url|default('-') }}</td>
                <td>{{ log.response.status|default('-') }}</td>
            </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}
